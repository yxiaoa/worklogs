<%= error_messages_for @worklog %>

<div class="box tabular"> 

<p><%= l(:field_day) %>: <%=@day%></p>
<p><%= f.select(:typee, Worklog.typee_collection, {:class=>'wiki-edit',:required => true}, :onchange=>"hiddenScore(this.value)")%> </p>
</div>

<div class="box tabular" id="week" style="display:<%=(@worklog && @worklog.typee == 0) ? 'none' : 'block'%>;"> 
  <fieldset>
    <legend><%= l(:title_worklog) %></legend>

    <table width="100%">
      <tr BGCOLOR="#eee">
        <td width="10%"><%="#{l(:index_item_project)}"%></td>
        <td width="10%"><%="#{l(:index_item_responsible)}"%></td>
        <td width="20%"><%="#{l(:index_item_task)}"%></td>
        <td width="10%"><%="#{l(:index_item_start)}"%></td>
        <td width="10%"><%="#{l(:index_item_due)}"%></td>
        <td width="20%"><%="#{l(:index_item_log)}"%></td>
        <td width="20%"><%="#{l(:index_item_schedule)}"%></td>
        <td width="10%"><%="#{l(:index_item_bottleneck)}"%></td>
      </tr>
    <%= f.fields_for :tasklogs do |task| %>
      <tr>
        <td><%= task.text_area :project %></td>
        <td><%= task.text_area :responsible %></td>
        <td><%= task.text_area  :task_description %></td>
        <td><%= task.date_field :start %></td>
        <td><%= task.date_field :due %></td>
        <td><%= task.text_area  :task_log %></td>
        <td><%= task.text_area  :schedule %></td>
        <td><%= task.text_area  :bottleneck %></td>
      </tr>
    <% end %>
    </table>

  </fieldset>
</div>